@model FacebookConsumer.Models.FaceBook.Post

@using (Ajax.BeginForm("CreatePost", "Profile", new AjaxOptions { HttpMethod = "Post", InsertionMode = InsertionMode.Replace, UpdateTargetId = "posts", OnSuccess= "myfun()" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Post</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.content, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.content, "", new { @class = "text-danger" })
            </div>
        </div>

   
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button id="Post" type="submit" class="w3-button w3-theme"><i class="fa fa-pencil"></i>  Post</button>
                @*<input type="submit" value="Create" class="btn btn-default" />*@
            </div>
        </div>
    </div>
}


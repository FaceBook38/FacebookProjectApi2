@model IEnumerable<FacebookConsumer.Models.FaceBook.User>

 
  <html> <body>
    <div>
        <h4 style="color:darkblue">MY Friends</h4>
        <hr />
        @foreach (var item in Model)
        {
            if (item.profile_image == null)
            {
                <img src="~/images/user.png" class="w3-circle" style="height:75px;width:75px" />

            }

            if (item.profile_image != null)
            {
                String img64 = Convert.ToBase64String(item.profile_image);
                String img64Url = string.Format("data:image/" + ";base64,{0}", img64); //imagetype can be e.g. gif, jpeg, png etc.
                <img src="@img64Url" class="w3-circle" style="height:75px;width:75px" />

            }

            <h3 style="">
                &nbsp; &nbsp;
                @Html.DisplayFor(model => item.user_name)
                &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                <button id="submit" class="w3-button w3-block w3-theme-l1 w3-circle" onclick="javascript: return add();">
                    @Html.ActionLink("ADD", "AddMember", new { id = item.user_id }, new { Style = "color:drakBlue" })
                </button>
            </h3>


        }
    </div>

    <script>
        function add() {
            $("#submit").alert("added");
        }
        </script>



         </body>
</html >

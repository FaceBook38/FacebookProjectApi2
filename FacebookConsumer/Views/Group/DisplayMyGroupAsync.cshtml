@model IEnumerable<FacebookConsumer.Models.FaceBook.Group>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.group_image)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.group_name)
        </th>


        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @{
                if (item.group_image == null)
                {
                    <td></td>
                }

                if (item.group_image != null)
                {
                    String img64 = Convert.ToBase64String(item.group_image);
                    String img64Url = string.Format("data:image/" + ";base64,{0}", img64); //imagetype can be e.g. gif, jpeg, png etc.
                    <td><img src="@img64Url" width="20" height="20" /></td>
                } }

                    <td>
                        @*@Html.DisplayFor(modelItem => item.group_name)*@
                       @* @Html.ActionLink(item.group_name, "GroupHomeAsync", "Group", null, null, null, null, new { item.group_id })*@
                        @Html.ActionLink(item.group_name, "GroupHomeAsync", new {id=item.group_id},new { @class="none"})
                    </td>



        </tr>
    }

</table>
<p>
  
    @Html.ActionLink("Create New", "Create")
    
